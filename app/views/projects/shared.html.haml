.row-fluid
  .span8
    %h1.page-header= @project.name
  .span4
    = image_tag @team.image, height: '100' if @team.image?

%table.table.table-striped
  %thead
    %tr
      %th #
      %th Feature
      %th Estimate, hours

  %tbody
    - total = 0
    - @features.each do |f|
      - total += f.estimate
      %tr
        %td= (f.index + 1 rescue '')
        %td
          = image_tag(f.image.small_thumb) if f.image?
          = f.name
        %td= f.estimate
  %tfoot
    %tr
      %td
      %td Total, hours:
      %td= total
          
= link_to(shared_project_path(@project.share_token, :format => :pdf), :target => "_blank", class: 'btn js-btn') do
  %i.icon-print
  Print PDF »
  
/
  %a.print-preview
    %i.icon-print
    Print »



